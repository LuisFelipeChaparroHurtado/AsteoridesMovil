<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SessionStartActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginBottom="40dp"
                android:background="@color/black"
                android:gravity="center"
                android:text="Inicia sesión"
                android:layout_gravity="center"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/edittex_email_i"
                android:layout_width="250dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:layout_height="60dp"
                android:hint="Correo eléctronico"
                android:background="@drawable/borde_edittext"
                >
            </EditText>

            <EditText
                android:id="@+id/edittext_password_i"
                android:layout_width="250dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:layout_height="60dp"
                android:background="@drawable/borde_edittext"
                android:hint="Contraseña"
                >
            </EditText>



            <Button
                android:id="@+id/button_start"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:background="@drawable/borde_button"
                android:layout_gravity="center"
                android:text="Registrar"
                />

            <TextView
                android:id="@+id/button_register_to"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Registrarme"
                />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>