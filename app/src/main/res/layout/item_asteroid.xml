<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="#007A0D0D">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="@drawable/borde_asteroids">


                <TextView
                    android:id="@+id/id_asteroid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Id del asteroide"
                    android:textColor="#0C6010"
                    android:layout_marginStart="20dp"/>
                <TextView
                    android:id="@+id/name_asteroid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Nombre"
                    android:textColor="#0C6010"
                    android:layout_marginStart="20dp"/>
                <TextView
                    android:id="@+id/nasa_jpl_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="nasa_jpl_url"
                    android:textColor="#0C6010"
                    android:layout_marginStart="20dp"/>
                <TextView
                    android:id="@+id/absolute_magnitude_h"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Magnitud absoluta"
                    android:textColor="#0C6010"
                    android:layout_marginStart="20dp"/>



            </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>